<?xml version="1.0" encoding="utf-8"?>
<net.artux.radio.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="?android:windowBackground"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="0dp"
    card_view:contentPadding="0dp">

    <ImageView
        android:id="@+id/stationLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/stationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="title"
        android:textSize="20sp" />

</net.artux.radio.widget.SquareLayout>